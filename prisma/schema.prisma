// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Theme {
  id        String    @id @default(uuid())
  name      String    @unique
  startDate DateTime  @default(now()) @map("start_date")
  endDate   DateTime? @map("end_date")
  user      User      @relation(fields: [creator], references: [userName])
  creator   String
  entries   Entry[]
}

model User {
  userName   String   @id @unique @map("user_name")
  createDate DateTime @default(now()) @map("create_date")
  entries    Entry[]
  themes     Theme[]
}

model Entry {
  id         String   @id @default(uuid())
  name       String
  createDate DateTime @default(now()) @map("create_date")
  updateDate DateTime @default(now()) @map("update_date")
  user       User     @relation(fields: [userName], references: [userName])
  userName   String   @map("user_name")
  theme      Theme    @relation(fields: [themeName], references: [name])
  themeName  String   @map("theme_name")
}
